<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Plan_Me" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textViewStyle">@style/pretendard_bold</item>
        <item name="android:buttonStyle">@style/pretendard_bold</item>
        <item name="android:editTextStyle">@style/pretendard_bold</item>
        <item name="android:radioButtonStyle">@style/pretendard_bold</item>
        <item name="android:checkboxStyle">@style/pretendard_bold</item>
    </style>
    <style name="Theme.Plan_Me" parent="Base.Theme.Plan_Me" />
    <style name="pretendard_bold" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="pretendard_regular" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="pretendard_medium" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="AppTheme.Splash"  parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/dark_gray</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/main_navi_timer</item>  //logo 들어갈 예정
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Plan_Me</item>
    </style>
</resources>