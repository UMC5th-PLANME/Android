<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_text1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 나은 내일"
        android:textSize="23.98dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/agro_medium"
        android:layout_marginTop="145dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@id/login_text2_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/login_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planme."
        android:textSize="41.96dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/agro_bold"
        app:layout_constraintTop_toBottomOf="@id/login_text1_tv"
        app:layout_constraintStart_toStartOf="@id/login_text1_tv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_kakao_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="92dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="카카오 로그인"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_bold"
        android:background="@drawable/login_btn_kakao"
        android:drawableStart="@drawable/login_ico_kakao"
        android:layout_marginTop="147.43dp"
        app:layout_constraintBottom_toTopOf="@id/login_google_btn"
        app:layout_constraintTop_toBottomOf="@id/login_text2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_google_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingStart="100dp"
        android:drawableStart="@drawable/login_ico_google"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="구글 로그인"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_bold"
        android:background="@drawable/login_btn_google"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/login_kakao_btn"
        app:layout_constraintEnd_toEndOf="@id/login_kakao_btn"
        app:layout_constraintTop_toBottomOf="@id/login_kakao_btn"/>

    <TextView
        android:id="@+id/login_offline_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offline"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toBottomOf="@id/login_google_btn"
        app:layout_constraintStart_toStartOf="@id/login_google_btn"
        app:layout_constraintEnd_toEndOf="@id/login_google_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>