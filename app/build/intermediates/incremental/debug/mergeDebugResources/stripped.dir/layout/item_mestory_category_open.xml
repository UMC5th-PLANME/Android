<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mestory_item_opened_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/deep_ivory"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/mestory_category_emoticon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/mestory_category_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/mestory_category_emoticon_tv"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/mestory_category_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="0 completed • 5 not yet"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/mestory_category_tv"
                    app:layout_constraintBottom_toBottomOf="@id/mestory_category_tv"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/mestory_category_down_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:src="@drawable/mestory_category_down"
                    app:layout_constraintStart_toEndOf="@id/mestory_category_detail_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/mestory_category_tv" />

                <ImageView
                    android:id="@+id/mestory_category_up_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:src="@drawable/mestory_category_up"
                    app:layout_constraintStart_toEndOf="@id/mestory_category_detail_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/mestory_category_tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="15dp">

                <ProgressBar
                    android:id="@+id/mestory_category_progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progress="50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/mestory_category_progress_minute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0M"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mestory_category_progressBar"
                    app:layout_constraintBottom_toBottomOf="@+id/mestory_category_progressBar"/>

                <TextView
                    android:id="@+id/mestory_category_progress_percentage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0%"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginEnd="6dp"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/mestory_category_progressBar"
                    app:layout_constraintTop_toTopOf="@+id/mestory_category_progressBar"
                    app:layout_constraintBottom_toBottomOf="@+id/mestory_category_progressBar"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>